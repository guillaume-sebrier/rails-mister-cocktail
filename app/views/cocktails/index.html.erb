<%= render "shared/navbar" %>

<div class="container">
  <div class="header text-center">
    <h1>Welcome to Le Wagon-bar</h1>
    <h2>All our Cocktails (<%= @cocktails.length %>)</h2>
  </div>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <% if cocktail.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>)">
            <%= cocktail.name %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://assets.afcdn.com/recipe/20180705/80348_w350h250c1cx1491cy2383.webp)">
          <%= cocktail.name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
