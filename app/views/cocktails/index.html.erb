<div class="navbar">
  <%= link_to 'MisterCocktail', cocktails_path %>
  <%= link_to 'Add Cocktail', new_cocktail_path, class: 'btn btn-outline-primary' %>
</div>
<div class="container">
<h1>All our Cocktails (<%= @cocktails.length %>)</h1>
  <div class="row justify-content-start">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 18rem;">
        <% unless cocktail.picture.nil? %>
          <%= image_tag cocktail.picture, alt: "alttext", class: "card-img-top"%>
        <% end %>
        <div class="card-body">
        <h3><%= cocktail.name %></h3>
        <%= link_to 'More info', cocktail_path(cocktail) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

