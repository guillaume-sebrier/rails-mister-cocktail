<div class="navbar">
  <%= link_to 'MisterCocktail', cocktails_path %>
  <%= link_to 'Add Cocktail', new_cocktail_path, class: 'btn btn-outline-primary' %>
</div>
<div class="container">
  <h1>
    <%= @cocktail.name  %>
  </h1>

  <ul>
    <% @cocktail.doses.each do |d| %>
      <li>
        <%= d.description %> <%= d.ingredient.name %>
        <%= link_to dose_path(d), method: :delete, data: { confirm: "Are you sure?" }  do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-outline-primary' %>
</div>
